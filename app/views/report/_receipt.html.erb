<br>

<%= bootstrap_form_tag url: '/report', :html => { :id => 'receipt_form' } do |f| %>

	<div class="row">
		<div class="col-4">
  		<%= f.date_field :start_date %>
		</div>
		<div class="col-4">
  		<%= f.date_field :end_date %>
		</div>
		<div class="col-4 cell-center">
  		<%= f.submit "View Receipts Report", class: "btn btn-block " %>
		</div>
	</div>

<% end %>

<hr>

<table  data-toggle="table"
        data-pagination="true"
        >
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
  
 		<% if @receipts %>
	    <% @receipts.each do |r|%>

        <tr>
          <td><%= r.date %></td>
          <td><%= r.des %></td>
          <td><%= r.price %></td>
        </tr>

	    <% end %>
    <% end %>

  </tbody>
</table>