<div class="row">
  <div class="col-md-6">
    <h1>Branches</h1>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to 'New Branch', new_branch_path, class: 'btn btn-info new' %>
  </div>
</div>

<table  data-toggle="table"
        data-pagination="true"
        >
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.name %></td>
        <td><%= branch.address %></td>
        <td><%= link_to 'Edit', edit_branch_path(branch), class: 'btn btn-warning btn-block' %></td>
        <td><%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

