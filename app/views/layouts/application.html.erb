<!DOCTYPE html>
<html>
  <head>
    <title>Project499</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>                        
          </button>
          <a class="navbar-brand" href="<%= root_path %>">Powerhouse Fitness Center Chiang Mai</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li><a href="<%= serves_path %>" data-turbolinks="false">Serve</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">

            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-cog"></span> Manage <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="<%= announcements_path %>" data-turbolinks="false">Announcement</a></li>
                <li><a href="<%= package_path %>" data-turbolinks="false">Package</a></li>
                <li><a href="<%= members_path %>" data-turbolinks="false">Member</a></li>
                <li><a href="<%= staffs_path %>" data-turbolinks="false">Staff</a></li>
              </ul>
            </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to(destroy_user_session_path, :method => :delete) do %> 
                  <span class="glyphicon glyphicon-log-out"></span> Logout
                <% end %>
                
              </li>       
            <% else %>
              <li>
                <%= link_to(new_user_session_path) do %> 
                  <span class="glyphicon glyphicon-log-in"></span> Login
                <% end %>
              </li> 
            <% end %>

          </ul>
        </div>
      </div>
    </nav>
    
    <div class="container">
      <%= yield %>
    </div>

  </body>
  
</html>