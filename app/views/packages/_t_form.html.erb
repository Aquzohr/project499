

<%= bootstrap_form_for(package, :html=> {:id => 'new_t_package'}) do |form| %>

  <div class="row">

    <div class="col">
      <%= form.text_field :name %>
    </div>

    <div class="col">
      <%= form.text_field :price %>
    </div>
    
    <%= form.fields_for :trainer_package, TrainerPackage.new do |f| %>
      <div class="col">
        <%= f.number_field :session %>
      </div>
    <% end %>

  </div>


  <br>

  <div class="row">
    <div class="col text-center">
      <%= form.submit %>
    </div>
  </div>

<% end %>

