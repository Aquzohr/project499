<div class="row">
  <div class="col-md-6">
    <h1>Nontrainer Packages</h1>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to 'New Nontrainer Package', new_nontrainer_package_path, class: 'btn btn-info' %>
  </div>
</div>

<table  data-toggle="table"
        data-pagination="true"
        >
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Freeze Time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @nontrainer_packages.each do |nontrainer_package| %>
      <tr>
        <td><%= nontrainer_package.name %></td>
        <td><%= nontrainer_package.price %></td>
        <td><%= nontrainer_package.freeze_time %></td>
        <td><%= link_to 'Show', nontrainer_package %></td>
        <td><%= link_to 'Edit', edit_nontrainer_package_path(nontrainer_package) %></td>
        <td><%= link_to 'Destroy', nontrainer_package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

