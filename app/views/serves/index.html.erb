<p id="notice"><%= notice %></p>

<h1>Serves</h1>

<table>
  <thead>
    <tr>
      <th>Checkin time</th>
      <th>Checkout time</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @serves.each do |serf| %>
      <tr>
        <td><%= serf.checkin_time %></td>
        <td><%= serf.checkout_time %></td>
        <td><%= serf.date %></td>
        <td><%= link_to 'Show', serf %></td>
        <td><%= link_to 'Edit', edit_serf_path(serf) %></td>
        <td><%= link_to 'Destroy', serf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

