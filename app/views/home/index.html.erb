
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('<%= image_url('1.jpeg') %>')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Powerhouse fitness Chiang Mai</h1>
              <span class="subheading">Exercise for Health</span>
            </div>
          </div>
        </div>
      </div>
    </header>


    <!-- Main Content -->
    <div class="container">

    	<h1>Announcement</h1>

      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

				<% @announcements.each do |a| %>
          <div class="post-preview">
            <a href="#">
              <h2 class="post-title"><%= a.title %></h2>
              <h3 class="post-subtitle"><%= a.des %></h3>
            </a>
            <p class="post-meta">Posted by
              <a href="#"><%= a.staff_id %></a>
              <%= a.date %></p>
          </div>
          <hr>
				<% end %>

          <!-- Pager -->
          <div class="clearfix">
            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
          </div>
        </div>
      </div>
    </div>


