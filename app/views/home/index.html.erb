
    <!-- Header -->
    <header class="masthead d-flex">
      <div class="container text-center my-auto">
        <h1 class="mb-5"><%= image_tag('logo.png', size: "400") %></h1>
        <a class="btn btn-primary btn-xl js-scroll-trigger" href="#news">What's News</a>
      </div>
      <div class="overlay"></div>
    </header>

    <!-- News -->
    <section class="content-section bg-light" id="news">
      <div class="container text-center">
        <div class="row">
          <div class="col-lg-10 mx-auto">
            <h2> <i class='icon-speech'></i> Announements</h2>
            <hr><br>

            <div class="row">
            <% @announcements.each do |announcement| %>
              <div class="col-sm-3">
                <div class="card text-center" style="height: 18rem;">
                  <% if announcement.image_url.present? %>
                    <img class="card-img-top" src="<%= announcement.image_url %>" alt="Card image cap" style="height: 75px;">
                  <% else %>
                    <img class="card-img-top" src="https://www.lrcmyanmar.org/wp-content/uploads/2018/11/noimage.png" alt="Card image cap" style="height: 75px;">
                  <% end %>
                  <div class="card-body">
                    <h5 class="card-title limit-text"><%= announcement.title %></h5>
                    <a href="<%=  announcement_path(announcement) %>" class="btn btn-primary">อ่านต่อ...</a>
                  </div>
                </div>
              </div>
            <% end %>
            </div>

            <br><br>
            <a class="btn btn-dark btn-xl js-scroll-trigger" href="<%= more_news_path %>">อ่านทั้งหมด</a>
          </div>
        </div>
      </div>

    </section>

    <!-- Callout -->
    <section class="callout" id="services">
      <div class="container text-center">
        <div class="row">
          <div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
            <span class="service-icon rounded-circle mx-auto mb-3">
              <i class="icon-layers"></i>
            </span>
            <h4>
              <strong class="text-white text-shadow" >Cleanly</strong>
            </h4>
          </div>
          <div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
            <span class="service-icon rounded-circle mx-auto mb-3">
              <i class="icon-present"></i>
            </span>
            <h4>
              <strong class="text-white text-shadow">Birthday Gift</strong>
            </h4>
          </div>
          <div class="col-lg-3 col-md-6 mb-5 mb-md-0">
            <span class="service-icon rounded-circle mx-auto mb-3">
              <i class="icon-event"></i>
            </span>
            <h4>
              <strong class="text-shadow text-white">Class Exercise</strong>
            </h4>
          </div>
          <div class="col-lg-3 col-md-6">
            <span class="service-icon rounded-circle mx-auto mb-3">
              <i class="icon-like"></i>
            </span>
            <h4>
              <strong class="text-shadow text-white">Friendly</strong>
            </h4>
          </div>
        </div>
        <br><br><br>
        <a class="btn btn-primary btn-xl js-scroll-trigger" href="#contact">Contact Now!</a>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="content-section bg-info text-white" id="contact">
      <div class="container text-center">
        <h2 class="mb-4"><i class="icon-location-pin"></i> Contact Us</h2>
        <hr>

        <i class="icon-arrow-down"></i>
        <p class="lead mb-5" style="line-height: inherit;">No: 69, Room: A5-A6,B6-B8 Chonlaprathan Rd, Tambon Su Thep, Amphoe Mueang Chiang Mai, Chang Wat Chiang Mai 50200</p>
        <p class="lead mb-3"><i class="icon-phone"></i> 081 764 8701</p>
      </div>
    </section>

    <!-- Map -->
    <section class="map">
      <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15107.805012474038!2d98.95213584787786!3d18.800325641890762!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x30da3a64742477cb%3A0x9abccf2d22c62964!2sPowerhouse+Fitness+Center!5e0!3m2!1sen!2sth!4v1518502613634" width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
      <br/>
    </section>

    <!-- Footer -->
    <footer class="footer text-center">
      <div class="container">
        <ul class="list-inline mb-5">
          <li class="list-inline-item">
            <a class="social-link rounded-circle text-white mr-3" href="https://www.facebook.com/PFCCM/" target="_blank">
              <i class="icon-social-facebook"></i>
            </a>
          </li>
        </ul>
      </div>
    </footer>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded js-scroll-trigger" href="#page-top">
      <i class="fa fa-angle-up"></i>
    </a>

