<%= bootstrap_form_for(announcement) do |form| %>

    <div class="row">
      <div class="col-6">
        <%= form.text_field :title %>
      </div>
      <div class="col-6">
        <%= form.text_field :image_url %>
      </div>
      <div class="col">
        <%= form.date_field :start_datetime %>
      </div>
      <div class="col">
        <%= form.date_field :end_datetime %>
      </div>
    </div>

    <div class="row">
      <div class="col-6">
        <%= form.text_area :des, label: "Description" %>
      </div>
      <div class="col-6">
        <%= form.text_area :video_embred, label: "Video Embred" %>        
      </div>
    </div>

    <%= form.submit nil, class: "btn btn-info btn-block" %>

<% end %>
