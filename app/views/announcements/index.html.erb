<a class="d-block p-3 text-center text-white bg-primary b4b full-width">
  <%= image_tag('logo2.png', size: "80") %> <br> 
  MANGE ANNOUNCE
</a>
<br><br>

<div class="row">
  <div class="col-md-6">
    <h1>Announcements</h1>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to 'New Announcement', new_announcement_path, class: 'btn btn-info new', :"data-turbolinks" => false %>
  </div>
</div>

<br><br>


<table  data-toggle="table"
        data-pagination-pre-text="Previous"
        data-pagination-next-text="Next"
        data-pagination="true"
        data-pagination-loop ="false">
  <thead>
    <tr>
      <th>Title</th>
      <th>Des</th>
      <th data-width="100px">Start Date</th>
      <th data-width="100px">End Date</th>
      <th data-width="100px"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements_all.each do |announcement| %>
      <tr>
        <td><%= announcement.title %></td>
        <td><%= announcement.des %></td>
        <td><%= announcement.start_datetime.strftime("%d/%m/%Y") %></td>
        <td><%= announcement.end_datetime.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Show', announcement_path(announcement), class: 'btn btn-info btn-block', :"data-turbolinks" => false %></td>
        <td><%= link_to 'Edit', edit_announcement_path(announcement), class: 'btn btn-warning btn-block', :"data-turbolinks" => false %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

