<%= bootstrap_form_for(member) do |form| %>

    <%= form.text_field :member_code %>
    
    <%= form.fields_for :user do |f| %>
      <%= f.email_field :email %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
      <%= f.text_field :firstname %>
      <%= f.text_field :lastname %>
      <%= f.text_field :phone %>
      <%= f.hidden_field :role, value: 'member' %>
    <% end %>

    <%= form.collection_select :nontrainer_package_id, NontrainerPackage.all, :id, :name %>
    <%= form.date_select :start_date, id: :member_start_date %>
    <%= form.date_select :end_date, id: :member_end_date %>
    <%= form.number_field :freeze_count, id: :member_freeze_count %>

    <%= form.submit %>
<% end %>
