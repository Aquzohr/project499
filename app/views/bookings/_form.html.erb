<%= bootstrap_form_for(booking) do |form| %>

  <div class="row">
    <div class="col-6">
      <% if current_user.role=="staff" %>
        <%= form.collection_select :member_id, Member.haveTrainer.group(:id).order(:id), :id, :OwnerPackage %>
      <% else %>
        <%= form.text_field :member_id, value: current_user.member.codeAndFullname, readonly: true %>
        <%= form.hidden_field :member_id, value: current_user.member.id %>
      <% end %>
    </div>
    <div class="col-6">
      <%= form.collection_select :staff_id, Staff.where(position: "Trainer"), :id, :codeAndFullname %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form.datetime_field :start_datetime, min: Time.now + 15*60 %>
    </div>
    <div class="col">
      <%= form.datetime_field :end_datetime, min: Time.now + 60*60 %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col text-center">
      <%= form.submit nil, class: "btn btn-info" %>
    </div>
  </div>


<% end %>
