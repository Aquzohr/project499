<a class="d-block p-5 text-center text-white bg-primary b4b full-width">BOOKING MENU</a>

<br><br>

<div class="row">
  <div class="col-md-6">
    <h1>Bookings</h1>
  </div>
  <div class="col-md-6 text-right">
    <% if current_user.role=="staff" %>
      <%= link_to 'New Booking', new_booking_path, class: 'btn btn-info new', :"data-turbolinks" => false %>
    <% end %>
  </div>
</div>

<br><br>

<table  data-toggle="table"
        data-pagination="true"
        >
  <thead>
    <tr>
      <th>Member</th>
      <th>Trainer</th>
      <th>Date</th>
      <th>Time</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.member.user.firstname %></td>
        <td><%= booking.staff.user.firstname %></td>
        <td><%= booking.date %></td>
        <td><%= booking.time %></td>

        <% if current_user.role=="staff" %>
          <td><%= link_to 'Edit', edit_booking_path(booking), class: 'btn btn-warning btn-block' %></td>
          <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
