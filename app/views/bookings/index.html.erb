<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table  data-toggle="table"
        data-pagination="true"
        >
  <thead>
    <tr>
      <th>Member</th>
      <th>Trainer</th>
      <th>Date</th>
      <th>Time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.member.user.firstname %></td>
        <td><%= booking.staff.user.firstname %></td>
        <td><%= booking.date %></td>
        <td><%= booking.time %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

